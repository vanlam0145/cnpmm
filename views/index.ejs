    <body>
        <div class="container logo-container">
            <div class="row">
                <div class="col-md-12">
                    <nav class="navbar" id="nav_bar" role="navigation">
                        <div class="navbar-header">
                            <button
                                type="button"
                                class="navbar-toggle navbar_icon "
                                data-toggle="collapse"
                                data-target="#bs-example-navbar-collapse-1"
                            >
                                <i class="fa fa-bars"></i>
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <h1 class="logo-div">
                                <a href="/">Footballkik</a>
                            </h1>
                        </div>

                        <div
                            class="collapse navbar-collapse"
                            id="bs-example-navbar-collapse-1"
                        >
                            <ul class="nav navbar-nav navbar-right">
                                <li style="padding-right: 50px;">
                                    <h2 class="reg-div">
                                        <a href="/">
                                            Login
                                        </a>
                                    </h2>
                                </li>

                                <li class="reg_link2">
                                    <h2 class="reg-div">
                                        <a href="/signup">
                                            Register
                                        </a>
                                    </h2>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </div>

        <div id="main">
            <div class="main">
                <form action="/" method="post">
                    <h1>
                        <a
                            href="/auth/facebook"
                            class="btn-socical btn-facebook btn-lg"
                        >
                            <i class="fa fa-facebook"></i> Sign Up With Facebook
                        </a>
                    </h1>
                    <h1>
                        <a
                            href="/auth/google"
                            class="btn-socical btn-gplus btn-lg"
                        >
                            <i class="fa fa-google-plus"></i> Sign Up With
                            Google
                        </a>
                    </h1>
                    <h1>
                        Login
                    </h1>
                    <% if(hasErrors){ %>
                    <div class="alert alert-danger text-center">
                        <a
                            href="#"
                            class="close"
                            data-dismiss="alert"
                            aria-label="close"
                            >&times;</a
                        >
                        <% _.forEach(messages,function(error){ %> <%= error
                        %><br />
                        <% }) %>
                    </div>
                    <% } %>
                    <div class="inset">
                        <p>
                            <label for="email">EMAIL ADDRESS</label>
                            <input type="text" name="email" placeholder="" />
                        </p>
                        <p>
                            <label for="password">PASSWORD</label>
                            <input
                                type="password"
                                name="password"
                                placeholder=""
                            />
                        </p>
                    </div>

                    <p class="p-container">
                        <span><a href="/signup">Register</a></span>
                        <input
                            type="submit"
                            class="login-log"
                            style=" background: #3bb5ec; border: #3bb5ec;"
                            value="Login"
                        />
                    </p>
                </form>
            </div>
        </div>
    </body>
